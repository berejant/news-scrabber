# Application
APP=news-scrabber
ENVIRONMENT=development

# NATS / JetStream
NATS_URL=nats://localhost:4222
NATS_USER=
NATS_PASSWORD=

JS_KV_BUCKET=news_kv
JS_KV_HISTORY=1
JS_KV_DESCRIPTION=Key-Value store for news-scrabber
JS_EVENTS_STREAM=NEWS
JS_EVENTS_SUBJECTS=news.*

# S3 (SeaweedFS S3 Gateway)
S3_ENDPOINT=http://localhost:8333
S3_REGION=us-east-1
S3_BUCKET=news
S3_ACCESS_KEY=changeme
S3_SECRET_KEY=changeme
S3_USE_SSL=false

# Qdrant Vector DB
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=
QDRANT_COLLECTION=news

# OpenAI (Transcription)
OPENAI_API_KEY=
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_MODEL=whisper-1
OPENAI_TIMEOUT_SEC=120

# Transcribe service
TRANSCRIBE_FFMPEG_PATH=ffmpeg
TRANSCRIBE_TEMP_DIR=/tmp/news-scrabber
TRANSCRIBE_MAX_CONCURRENT=2
TRANSCRIBE_QUEUE_SIZE=100

# Scraper
SCRAPER_USER_AGENT=news-scrapper-bot/1.0
SCRAPER_SEEDS=https://example.com,https://another-source.com
SCRAPER_CONCURRENCY=4
SCRAPER_REQUEST_TIMEOUT_SEC=10

# Datadog (optional)
DD_DOGSTATSD_HOST=
